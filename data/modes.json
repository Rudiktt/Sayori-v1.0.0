{
  "игровой": {
    "description": "Оптимизация системы для игр",
    "actions": [
      {
        "type": "launch",
        "target": "discord.exe",
        "args": "--minimized",
        "check_running": true
      },
      {
        "type": "volume",
        "target": "system",
        "level": 80,
        "smooth": true,
        "duration": 1.5
      },
      {
        "type": "keyboard_shortcut",
        "action": "disable",
        "keys": ["win", "alt+tab"]
      }

    ],
    "notifications": {
      "start_sound": "modes/game_on",
      "end_sound": "modes/game_off",
      "tts_start": "Игровой режим активирован"
    },
    "requirements": {
      "min_ram_gb": 8,
      "required_apps": ["discord.exe", "steam.exe"]
    }
  },

  "рабочий": {
    "description": "Настройки для продуктивной работы",
    "actions": [
      {
        "type": "launch",
        "target": "code.exe",
        "args": "--disable-extensions"
      },
      {
        "type": "volume",
        "target": "system",
        "level": 30,
        "smooth": true
      },

      {
        "type": "script",
        "path": "scripts/disable_distractions.bat"
      }
    ],
    "notifications": {
      "start_sound": "modes/workmode",
      "tts_start": "Включаю рабочий режим"
    }
  },

  "мультимедиа": {
    "description": "Настройки для просмотра контента",
    "actions": [
      {
        "type": "volume",
        "target": "system",
        "level": 60
      },
      {
        "type": "display",
        "action": "dim",
        "brightness": 70
      },
      {
        "type": "kill_process",
        "target": "discord.exe",
        "force": true
      }
    ],
    "notifications": {
      "start_sound": "modes/media_on"
    }
  },

  "энергосбережение": {
    "description": "Режим экономии энергии",
    "actions": [
      {
        "type": "power",
        "plan": "power_saver"
      },
      {
        "type": "display",
        "action": "dim",
        "brightness": 40
      },
      {
        "type": "volume",
        "target": "system",
        "level": 20
      }
    ],
    "requirements": {
      "on_battery": true
    }
  }
}