{
  "voice_commands": {
    "управление режимами": {
      "активируй игровой режим": {
        "action": "activate_mode",
        "params": {
          "mode": "игровой"
        },
        "response": "Активирую игровой режим",
        "sound": "modes/gamemode_on"
      },
      "включи рабочий режим": {
        "action": "activate_mode",
        "params": {
          "mode": "рабочий"
        },
        "response": "Включаю рабочий режим",
        "sound": "modes/workmode_on"
      }
    },
    
    "управление звуком": {
      "громкость на (\\d{1,3})": {
        "action": "set_volume",
        "params": {
          "level": "$1"
        },
        "regex": true,
        "response": "Устанавливаю громкость на $1%",
        "sound": "volume/change"
      },
      "выключи звук": {
        "action": "set_mute",
        "params": {
          "state": true
        },
        "response": "Звук отключен",
        "sound": "volume/mute"
      }
    },
    
    "системные команды": {
      "перезагрузка": {
        "action": "system_reboot",
        "requires_confirmation": true,
        "response": "Подтвердите перезагрузку",
        "sound": "system/warning"
      },
      "список команд": {
        "action": "show_help",
        "response": "Доступные команды: управление режимами, звуком, системные"
      }
    },
    
    "медиа управление": {
      "пауза": {
        "action": "media_pause",
        "keyboard_shortcut": "space"
      },
      "следующий трек": {
        "action": "media_next",
        "keyboard_shortcut": "ctrl+right"
      }
    }
  },
  
  "cli_commands": {
    "mode": {
      "description": "Управление режимами",
      "actions": {
        "game": {"call": "activate_mode", "args": {"mode": "игровой"}},
        "work": {"call": "activate_mode", "args": {"mode": "рабочий"}}
      }
    },
    "volume": {
      "description": "Управление громкостью",
      "actions": {
        "set": {"call": "set_volume", "args": {"level": "$1"}},
        "mute": {"call": "set_mute", "args": {"state": true}}
      }
    }
  },
  
  "metadata": {
    "version": "1.1",
    "author": "Rudiktt",
    "wake_word": "сайори",
    "default_sound": "system/notification"
  }
}