{
  "voice_commands": {
    "управление режимами": {
      "Включи игровой режим": {
        "action": "activate_mode",
        "params": {"mode": "игровой"},
        "confirmation": "",
        "alternatives": [
          "включи игровой мод",
          "переключи на игры",
          "старт гейминг"
        ]
      },
      "Включи рабочий режим": {
        "action": "activate_mode",
        "params": {"mode": "рабочий"},
        "confirmation": "modes/work_activated"
      }
    },
    
    "управление звуком": {
      "громкость на X": {
        "action": "set_volume",
        "params": {"level": "X"},
        "regex": "громкость на (\\d{1,3})",
        "confirmation": "volume/sound_change"
      },
      "выключи звук": {
        "action": "set_mute",
        "params": {"state": true},
        "confirmation": "volume/sound_off"
      }
    },
    
    "системные команды": {
      "перезагрузка": {
        "action": "reboot",
        "confirmation": "system/reboot",
        "requires_confirmation": true
      },
      "список команд": {
        "action": "show_help",
        "response": "Доступные команды: ..."
      }
    }
  },
  
  "cli_commands": {
    "mode": {
      "description": "Управление режимами",
      "actions": {
        "game": {"call": "activate_mode", "args": {"mode": "игровой"}},
        "work": {"call": "activate_mode", "args": {"mode": "рабочий"}}
      }
    },
    "volume": {
      "description": "Управление громкостью",
      "actions": {
        "<0-100>": {"call": "set_volume", "args": {"level": "$1"}},
        "mute": {"call": "set_mute", "args": {"state": true}}
      }
    }
  },
  
  "system_triggers": {
    "high_cpu_usage": {
      "threshold": 90,
      "action": "reduce_load",
      "params": {"level": "medium"}
    },
    "low_battery": {
      "threshold": 15,
      "action": "power_save_mode",
      "emergency": true
    }
  },
  
  "metadata": {
    "version": "1.0",
    "author": "Rudiktt",
    "last_updated": "07-08-2025",
    "default_confirmation": "system/default_confirm"
  }
}